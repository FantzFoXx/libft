#include "libft.h"
#include <stdio.h>

char	*ft_strjoin(const char *s1, const char *s2)
{
	size_t	len;
	size_t	i;
	char	*new_str;

	len = ft_strlen(s1) + ft_strlen(s2);
	new_str = ft_strnew(len);
	if (!new_str)
		return (NULL);
	i = -1;
	while (s1[++i] != 0)
		new_str[i] = s1[i];
	ft_strcat((char *)new_str, s2);
	printf("s1 contient %s, s2 contient %s, newstr contient %s\n",s1,s2,new_str);
	return (new_str);
}
